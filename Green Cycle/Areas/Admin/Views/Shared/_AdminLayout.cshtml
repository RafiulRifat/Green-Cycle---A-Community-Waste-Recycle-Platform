@using System
@{
    Layout = null; // this is a full layout
    var pageTitle = (ViewBag.Title as string) ?? "Admin";

    // Helpers
    Func<string, string, bool> isAction = (ctrl, act) =>
        string.Equals((string)ViewContext.RouteData.Values["controller"], ctrl, StringComparison.OrdinalIgnoreCase) &&
        string.Equals((string)ViewContext.RouteData.Values["action"], act, StringComparison.OrdinalIgnoreCase);

    Func<string, string, string, bool> isActiveArea = (area, ctrl, act) =>
    {
        var routeArea = (string)(ViewContext.RouteData.DataTokens?["area"] ?? "");
        return string.Equals(routeArea ?? "", area ?? "", StringComparison.OrdinalIgnoreCase)
               && string.Equals((string)ViewContext.RouteData.Values["controller"], ctrl, StringComparison.OrdinalIgnoreCase)
               && string.Equals((string)ViewContext.RouteData.Values["action"], act, StringComparison.OrdinalIgnoreCase);
    };

    bool isAdmin = User?.IsInRole("Admin") ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle • Admin • GreenCycle</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        body {
            background-color: #f6f7fb;
        }

        .sidebar {
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #334155;
            }

                .sidebar .nav-link.active {
                    background: #e8f4ec;
                    color: #0f5132;
                    font-weight: 600;
                }

        .brand {
            font-weight: 700;
            letter-spacing: .2px;
        }

        .content-wrap {
            min-height: 100vh;
        }

        .topbar-shadow {
            box-shadow: 0 1px 0 rgba(0,0,0,.06);
        }
    </style>

    @RenderSection("head", required: false)
</head>
<body>

    <!-- Topbar -->
    <header class="topbar-shadow bg-white">
        <div class="container-fluid py-2">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <a href="@Url.Action("Index","Dashboard", new { area = "Admin" })" class="navbar-brand brand text-success mb-0">
                        GreenCycle Admin
                    </a>
                    <a href="@Url.Action("Index","Home", new { area = "" })" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to site
                    </a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <span class="text-muted small">Signed in as <strong>@User.Identity.Name</strong></span>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    @Html.ActionLink("Manage Profile", "Manage", "Account", new { area = "" },
                                        new { @class = "dropdown-item" })
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <!-- logout button calls hidden form -->
                                    <button type="submit"
                                            class="dropdown-item text-danger"
                                            form="adminLogoutForm">
                                        <i class="bi bi-box-arrow-right me-1"></i> Log off
                                    </button>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 col-lg-2 sidebar bg-white border-end pt-3">
                <ul class="nav flex-column px-2">
                    <li class="nav-item mb-1">
                        @Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "Admin" },
                            new { @class = "nav-link " + (isActiveArea("Admin", "Dashboard", "Index") ? "active" : "") })
                    </li>
                    <li class="nav-item mb-1">
                        @Html.ActionLink("Users & Roles", "Index", "Users", new { area = "Admin" },
                            new { @class = "nav-link " + (isActiveArea("Admin", "Users", "Index") ? "active" : "") })
                    </li>
                    <li class="nav-item mb-1">
                        @Html.ActionLink("Reports", "Index", "Reports", new { area = "Admin" },
                            new { @class = "nav-link " + (isActiveArea("Admin", "Reports", "Index") ? "active" : "") })
                    </li>
                    <li class="nav-item mb-1">
                        @Html.ActionLink("Events", "Index", "Events", new { area = "Admin" },
                            new { @class = "nav-link " + (isActiveArea("Admin", "Events", "Index") ? "active" : "") })
                    </li>
                    <li class="nav-item mb-1">
                        @Html.ActionLink("Posts", "Index", "Posts", new { area = "Admin" },
                            new { @class = "nav-link " + (isActiveArea("Admin", "Posts", "Index") ? "active" : "") })
                    </li>
                </ul>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 col-lg-10 px-4 py-4 content-wrap">
                @if (!isAdmin)
                {
                    <div class="alert alert-danger">
                        You do not have permission to view the admin area.
                    </div>
                }
                else
                {
                    @RenderBody()
                }
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top bg-white">
        <div class="container py-3 text-center text-muted small">
            © @DateTime.Now.Year GreenCycle · Admin
        </div>
    </footer>

    <!-- Hidden global logout form -->
    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "adminLogoutForm", @class = "d-none" }))
    {
        @Html.AntiForgeryToken()
    }

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
