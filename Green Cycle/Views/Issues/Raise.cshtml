@model Green_Cycle.Models.ViewModels.Issues.IssueVm
@{
    ViewBag.Title = "Raise an Issue";
}
<div class="container" style="max-width:820px">
    <h2 class="fw-bold">Raise an Issue</h2>
    <p class="text-muted mb-4">Tell us what went wrong so we can help</p>

    @if (TempData["IssueSuccess"] != null)
    {
        <div class="alert alert-success">@TempData["IssueSuccess"]</div>
    }

    @using (Html.BeginForm("Raise", "Issues", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Issue Type</label>
            @Html.DropDownListFor(m => m.IssueType,
                new SelectList(new[] { "Pickup", "Machine", "Redemption", "Other" }),
                htmlAttributes: new { @class = "form-select" })
        </div>

        <div class="mb-3">
            <label class="form-label">Pickup Reference</label>
            <select class="form-select" name="ReferenceId">
                <option value="">Select…</option>
                <option value="PU-1001">Sep 15, 2025 – 5678 Pinewood Dr</option>
                <option value="PU-1002">Sep 12, 2025 – 123 Main St</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            @Html.TextAreaFor(m => m.Description, 6, 60, new { @class = "form-control", placeholder = "Please provide as much detail as possible" })
        </div>

        <div class="mb-3">
            <label class="form-label d-block">Attach Screenshot/Photo</label>
            <input type="file" class="form-control" name="file" />
        </div>

        <div class="mb-3">
            <label class="form-label d-block">Priority</label>
            <div class="form-check">
                @Html.RadioButtonFor(m => m.Priority, "Low", new { @class = "form-check-input", id = "prioLow", @checked = "checked" })
                <label class="form-check-label" for="prioLow">Low (FYI)</label>
            </div>
            <div class="form-check">
                @Html.RadioButtonFor(m => m.Priority, "Medium", new { @class = "form-check-input", id = "prioMed" })
                <label class="form-check-label" for="prioMed">Medium (Needs attention soon)</label>
            </div>
            <div class="form-check">
                @Html.RadioButtonFor(m => m.Priority, "High", new { @class = "form-check-input", id = "prioHigh" })
                <label class="form-check-label" for="prioHigh">High (Urgent)</label>
            </div>
        </div>

        <div class="mb-4">
            <div class="form-check form-check-inline">
                @Html.CheckBoxFor(m => m.NotifyByPhone, new { @class = "form-check-input", id = "notifyPhone" })
                <label class="form-check-label" for="notifyPhone">Phone</label>
            </div>
            <div class="form-check form-check-inline">
                @Html.CheckBoxFor(m => m.NotifyInApp, new { @class = "form-check-input", id = "notifyApp" })
                <label class="form-check-label" for="notifyApp">In-app notification</label>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-dark px-4">Submit Issue</button>
            <a href="@Url.Action("Index","Home")" class="btn btn-outline-secondary px-4">Cancel</a>
        </div>
    }
</div>
