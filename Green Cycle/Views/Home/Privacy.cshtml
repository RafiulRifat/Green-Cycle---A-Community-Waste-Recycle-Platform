@{
    ViewBag.Title = "Privacy Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <h1 class="display-4 fw-bold text-dark text-center mb-5">Privacy Policy</h1>

            <!-- Data Collected -->
            <div class="mb-4">
                <h3 class="h4 fw-bold">Data Collected</h3>
                <ul class="mt-3">
                    <li>Personal information such as your name and email address</li>
                    <li>Usage data including interactions with our website</li>
                    <li>Photos uploaded for waste recognition</li>
                    <li>Participation in challenges and recycling statistics</li>
                </ul>
            </div>

            <!-- Cookies -->
            <div class="mb-4">
                <h3 class="h4 fw-bold">Cookies</h3>
                <p class="text-muted mb-0">
                    We use cookies to enhance your experience on our site and to analyze site performance.
                </p>
            </div>

            <!-- OAuth -->
            <div class="mb-4">
                <h3 class="h4 fw-bold">OAuth (Google)</h3>
                <p class="text-muted mb-0">
                    If you choose to log in via Google, we will receive your name and email address as
                    permitted by your Google account settings.
                </p>
            </div>

            <!-- Contact -->
            <div class="mb-5">
                <h3 class="h4 fw-bold">Contact Email</h3>
                <p class="text-muted">
                    If you have any questions about this policy, please contact us at
                    <a href="mailto:contact@greencycle.com">contact@greencycle.com</a>.
                </p>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Index","Home")" class="btn btn-success px-4">Back to Home</a>
            </div>

            <div class="text-center text-muted small mt-5">
                © @DateTime.Now.Year GreenCycle
            </div>
        </div>
    </div>
</section>
