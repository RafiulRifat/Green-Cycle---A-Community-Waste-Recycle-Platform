@model Green_Cycle.Models.ViewModels.Account.LoginViewModel
@{
    ViewBag.Title = "Sign in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center py-5">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-sm rounded-4 p-4 p-lg-5">

            <h2 class="fw-bold text-center mb-4">Sign in</h2>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <!-- Password -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label fw-semibold" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <!-- Remember me -->
                <div class="form-check mb-3">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", id = "rememberMe" })
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>

                <button type="submit" class="btn btn-success w-100 py-2 mb-3">Sign in</button>
            }

            <div class="text-center text-muted mb-3">or</div>

            <!-- External login (Google example) -->
            <div class="d-grid mb-3">
                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })"
                   class="btn btn-outline-secondary w-100 py-2">
                    Continue with Google
                </a>
            </div>

            <!-- Links -->
            <div class="d-flex justify-content-between small">
                <a href="@Url.Action("ForgotPassword","Account")" class="text-decoration-none">Forgot password?</a>
                <a href="@Url.Action("Register","Account")" class="fw-semibold text-success text-decoration-none">Sign up</a>
            </div>
        </div>
    </div>
</div>
