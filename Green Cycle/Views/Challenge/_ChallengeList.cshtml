@model IEnumerable<Green_Cycle.Models.Entities.Challenge>
@using System.Linq
@using Green_Cycle.Models.Entities

@foreach (var c in (Model ?? Enumerable.Empty<Challenge>()))
{
    <div class="card gc-card shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">@c.Title</h5>
                <div class="text-muted">
                    @c.StartUtc.ToString("MMM d, yyyy") – @c.EndUtc.ToString("MMM d, yyyy")
                </div>
                <div class="mt-2">Points: @c.PointsPerScan per recyclable scan</div>
            </div>

            <div class="text-end">
                @if (c.IsActiveWindow)
                {
                    <span class="badge bg-success-subtle text-success gc-badge">Active</span>
                }
                else if (c.Status == ChallengeStatus.Upcoming)
                {
                    <span class="badge bg-secondary-subtle text-secondary gc-badge">Upcoming</span>
                }
                else
                {
                    <span class="badge bg-light text-muted gc-badge">Past</span>
                }

                <div class="mt-3">
                    @if (c.IsUserJoined)
                    {
                        <button class="btn btn-outline-secondary" disabled>Joined</button>
                    }
                    else if (c.Status != ChallengeStatus.Past)
                    {
                        using (Html.BeginForm("Join", "Challenge", FormMethod.Post, new { @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", c.Id)
                            <button type="submit" class="btn btn-outline-success">Join</button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}
