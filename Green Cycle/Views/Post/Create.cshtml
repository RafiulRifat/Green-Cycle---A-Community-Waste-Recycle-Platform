@model GreenCycle.Models.ViewModels.Posts.PostCreateViewModel
@{
    ViewBag.Title = "Create Post";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container my-4">
    <h2 class="mb-4">Create Post</h2>

    @using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            <label class="form-label">Title</label>
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Post title" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Summary</label>
            @Html.TextBoxFor(m => m.Summary, new { @class = "form-control", placeholder = "Short summary" })
            @Html.ValidationMessageFor(m => m.Summary, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Body</label>
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 8, placeholder = "Write your post..." })
            @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label d-block">Cover Image</label>
            <input type="file" name="coverImage" class="form-control" accept="image/*" />
            @if (!string.IsNullOrEmpty(Model.ExistingCoverImagePath))
            {
                <div class="d-flex align-items-center mt-2">
                    <img src="@Url.Content(Model.ExistingCoverImagePath)" alt="@Model.CoverImageAlt" style="width:90px;height:90px;object-fit:cover" class="rounded me-3" />
                    <div class="small text-muted">@System.IO.Path.GetFileName(Model.ExistingCoverImagePath)</div>
                </div>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Alt Text</label>
            @Html.TextBoxFor(m => m.CoverImageAlt, new { @class = "form-control", placeholder = "Describe the image for accessibility" })
        </div>

        <div class="d-flex gap-2">
            <button type="submit" name="submit" value="Publish" class="btn btn-success">Publish</button>
            <button type="submit" name="submit" value="Draft" class="btn btn-outline-secondary">Save Draft</button>
            <a href="@Url.Action("Index", "Post")" class="btn btn-outline-light border">Cancel</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
