@model GreenCycle.Models.ViewModels.RecognitionViewModel
@using GreenCycle.Models.Entities
@{
    ViewBag.Title = "Material Emissions Calculator";
}

<style>
    .gcv-hero {
        background: linear-gradient(135deg,#047857,#059669);
        color: #fff;
        padding: 26px 22px;
        border-radius: 18px;
        box-shadow: 0 12px 24px rgba(4,120,87,.25);
        margin-bottom: 22px
    }

        .gcv-hero h2 {
            margin: 0;
            font-weight: 700;
            letter-spacing: .3px
        }

        .gcv-hero p {
            margin: 6px 0 0;
            opacity: .95
        }

    .gcv-card {
        background: #fff;
        border: 1px solid #b7ead1;
        border-radius: 18px;
        box-shadow: 0 10px 18px rgba(0,0,0,.04);
        padding: 20px
    }

    .gcv-btn {
        background: #047857;
        border: 1px solid #065f46;
        color: #fff !important;
        font-weight: 600;
        padding: 10px 18px;
        border-radius: 999px;
        transition: transform .08s ease,box-shadow .2s ease,background .2s ease;
        box-shadow: 0 8px 16px rgba(4,120,87,.25)
    }

        .gcv-btn:hover, .gcv-btn:focus {
            background: #065f46;
            transform: translateY(-1px);
            box-shadow: 0 10px 18px rgba(4,120,87,.3)
        }

    .gcv-note {
        color: #0c4a3a;
        opacity: .85
    }

    .gcv-input.form-control {
        border-radius: 12px;
        border-color: #b7ead1
    }

        .gcv-input.form-control:focus {
            border-color: #047857;
            box-shadow: 0 0 0 3px rgba(4,120,87,.25)
        }

    .gcv-file {
        border: 1px dashed #9ddfc3;
        padding: 16px;
        border-radius: 14px;
        background: #f6fff9
    }
</style>

<div class="gcv-hero">
    <h2>Calculate your impact</h2>
    <p>Choose a material and enter its weight. Optionally add a photo.</p>
</div>

<div class="gcv-card">
    @using (Html.BeginForm("Index", "Recognition", FormMethod.Post,
             new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Material, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EnumDropDownListFor(m => m.Material, new { @class = "form-control gcv-input" })
                @Html.ValidationMessageFor(m => m.Material, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top:12px;">
            @Html.LabelFor(m => m.WeightKg, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.WeightKg, new { @class = "form-control gcv-input", type = "number", step = "0.1", min = "0.1", max = "20", placeholder = "e.g., 2.5" })
                <span class="help-block gcv-note">Allowed range: 0.1 – 20 kg.</span>
                @Html.ValidationMessageFor(m => m.WeightKg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top:12px;">
            @Html.LabelFor(m => m.Photo, "Photo (optional)", new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                <div class="gcv-file">
                    <input type="file" name="Photo" id="Photo" class="form-control" accept="image/*" />
                    <small class="gcv-note">JPG, PNG, GIF, or WEBP — up to 5 MB.</small>
                    @Html.ValidationMessage("Photo", "", new { @class = "text-danger", style = "display:block" })
                </div>
            </div>
        </div>

        <div class="form-group" style="margin-top:10px;">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="gcv-btn">Calculate</button>
            </div>
        </div>
    }
</div>
