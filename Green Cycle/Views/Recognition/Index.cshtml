@model GreenCycle.Models.ViewModels.RecognitionViewModel
@{
    ViewBag.Title = "Recognition";
    Layout = "~/Views/Shared/_Layout.cshtml";   // make sure you have a _Layout.cshtml
}

<style>
    .gc-wrap {
        max-width: 720px;
        margin: 40px auto;
        padding: 24px;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        font-family: system-ui,Arial;
        background: #fff;
    }

    .gc-brandrow {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 12px;
    }

    .gc-logo {
        height: 24px;
    }

    .gc-brand {
        font-weight: 700;
        font-size: 22px;
        color: #0a7a3f;
    }

    .gc-title {
        text-align: center;
        font-size: 36px;
        margin: 20px 0;
    }

    .gc-zone {
        border: 2px dashed #cbd5e1;
        border-radius: 12px;
        padding: 20px;
        margin: 20px auto;
        max-width: 500px;
        text-align: center;
    }

    .gc-sample {
        width: 200px;
        border-radius: 8px;
        display: block;
        margin: 0 auto 12px;
    }

    .gc-main {
        font-size: 16px;
    }

    .gc-sub {
        font-size: 12px;
        color: #6b7280;
    }

    .gc-btn {
        margin-top: 16px;
        background: #0a7a3f;
        color: #fff;
        border: none;
        padding: 12px 28px;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
    }

    .gc-note {
        text-align: center;
        color: #374151;
        margin-top: 16px;
        font-size: 13px;
    }
</style>

<div class="gc-wrap">
    <!-- Branding -->
    <div class="gc-brandrow">
        <img src="~/Content/images/leaf-icon.png" class="gc-logo" alt="GreenCycle" />
        <span class="gc-brand">GreenCycle</span>
    </div>

    <!-- Title -->
    <h1 class="gc-title">Recognition</h1>

    <!-- Upload zone -->
    <div class="gc-zone">
        <img src="~/Content/images/sample-bottle.jpg" class="gc-sample" alt="Sample" />
        <div class="gc-main">Drag &amp; drop an image or Browse</div>
        <div class="gc-sub">Max 5 MB, min 256 × 256 px, JPG/PNG only</div>
    </div>

    <!-- Upload form -->
    @using (Html.BeginForm("Index", "Recognition", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <input type="file" name="Photo" accept=".jpg,.jpeg,.png" style="display:block;margin:0 auto;" />
        <button type="submit" class="gc-btn">Analyze</button>
    }

    <div class="gc-note">Location data is stripped from your photo.</div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger" style="max-width:500px;margin:20px auto;text-align:center;">
            @Model.Error
        </div>
    }
</div>
