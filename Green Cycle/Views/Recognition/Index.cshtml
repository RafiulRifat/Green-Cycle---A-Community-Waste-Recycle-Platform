@model GreenCycle.Models.ViewModels.RecognitionViewModel
@using GreenCycle.Models.Entities

@{
    ViewBag.Title = "Material Emissions Calculator";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "Recognition", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Material, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.Material, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Material, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.WeightKg, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.WeightKg, new { @class = "form-control", type = "number", step = "0.1", min = "0.1", max = "20" })
            <span class="help-block">Enter weight between 0.1 and 20 kg.</span>
            @Html.ValidationMessageFor(m => m.WeightKg, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Calculate</button>
        </div>
    </div>
}
