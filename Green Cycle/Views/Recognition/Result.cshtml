@model GreenCycle.Models.ViewModels.RecognitionResultViewModel
@using GreenCycle.Models.Entities

@{
    ViewBag.Title = "Emission Result";
}

<h2>@ViewBag.Title</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Material</th>
        <td>@Model.Material</td>
    </tr>
    <tr>
        <th>Weight (kg)</th>
        <td>@Model.WeightKg</td>
    </tr>
    <tr>
        <th>Emission factor range (kg CO₂e / kg)</th>
        <td>@Model.FactorMinKgPerKg – @Model.FactorMaxKgPerKg</td>
    </tr>
    <tr>
        <th>Total emissions (min – max kg CO₂e)</th>
        <td>@Model.EmissionsMinKg – @Model.EmissionsMaxKg</td>
    </tr>
    <tr>
        <th>Total emissions (average kg CO₂e)</th>
        <td><strong>@Model.EmissionsAvgKg</strong></td>
    </tr>
</table>

<p class="text-muted">@Model.Notes</p>

<p>
    @Html.ActionLink("Calculate another", "Index", "Recognition", null, new { @class = "btn btn-default" })
</p>
